#<?cfg paf dictionary ?>
#
# Dictionary for IsrFlatStage policies
#
target: lsst.ip.pipeline.IsrFlatStage

definitions: {
    #input clipboard keys
    inputKeys: {
        type: "policy"
        dictionary: {
            definitions: {
                exposure: {
                    type: "string"
                    description: "specify the clipboard key of the exposure to process."
                    default: "Exposure"
                    maxOccurs: 1
                }        
                flatexposure: {
                    type: "string"
                    description: "Clipboard key of the flat frame"
                    default: "flatExposure"
                    maxOccurs: 1
                }        
            }
        }
        maxOccurs: 1        
    }
    
    #output clipboard keys:
    outputKeys: {
        type: "policy"
        dictionary: {
            definitions: {
                flatCorrectedExposure: {
                    type: "string"
                    description: "specify output clipboard key of the corrected exposure"
                    maxOccurs: 1
                    default: "flatCorrectedExposure"
                }
            }
        }
        maxOccurs: 1
    }
    parameters: {
        type: "policy"
        dictionary: {
            definitions: {
                flatScalingType: {
                    type: "string"
                    description: "Flat scaling type: MEAN, MIN, MAX"
                    default: "MEAN"
                    minOccurs: 1 
                }
                
            }
        }
    }
}
